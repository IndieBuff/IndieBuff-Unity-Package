.window-drop-zone-styling {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0);
    opacity: 1; /* Keep at 1 by default */
    transition-property: background-color, visibility;
    transition-duration: 0.2s;
    transition-timing-function: ease;
    display:flex;
    z-index:9999;
    align-items:center;
    justify-content:center;
}

.window-drop-zone-styling.active {
    visibility: visible;
    background-color: rgba(0, 0, 0, 0.75);
}

.drop-label-container {
    position: relative;
    bottom: 395px;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.window-drag-drop-label {
    -unity-text-align: middle-center;
    color: rgb(255, 255, 255);
    font-size: 18px;
    -unity-font-style: bold;
    white-space: normal;
    padding: 20px;
    opacity: 0;
    visibility: hidden;
}

.window-drag-drop-label.active {
    opacity: 1;
    visibility: visible;
}